{# templates/avis/confirmation.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <title>Avis - Confirmation</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f9f9f9;
        }
        .confirmation-message {
            text-align: center;
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 5px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .button {
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }
        .button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="confirmation-message">
        <h1>Merci</h1>
        <p>Votre avis a bien été pris en compte.</p>
            <a href="{{ path('avis') }}">
        <button type="submit" class="button">Retour</button>

    </div>
</body>
</html>
