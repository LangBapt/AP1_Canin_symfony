{% extends 'base.html.twig' %}

{% block title %}Presentation{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% if is_granted("ROLE_ADMIN") %}
<div class="example-wrapper">

    {% for pres in presentations %}
     <form action="{{ path('presentation_update', {id: pres.id}) }}" method="POST">
        <label> Titre: </label>
        <input type="text" name="titre" class="form-control mb-2" value="{{ pres.titrePresentation }}">

        <label> Texte: </label>
        <textarea name="texte" class="form-control mb-2">{{ pres.textePresentation }}</textarea>
        
        <div class="d-flex justify-content-between mt-3"> <!-- Centrer les boutons et les espacer -->
            <button type="submit" class="btn btn-primary w-45">Modifier</button>
        </div>
    </form>
    {% endfor %}
</div>

{% else %}
<div class="example-wrapper">
    {% for pres in presentations %}
     <h2> {{pres.titrePresentation}} </h2>
     <p> {{pres.textePresentation}} </p>
    {% endfor %}
</div>
{% endif %}
{% endblock %}
