{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .cards-container {
        display: grid;
        grid-template-rows: repeat(auto-fill, minmax(250px, 1fr));
        gap: 10px;
        padding: 20px;
    }
    .card {
        background-color: #f9f9f9;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        padding: 15px;
        margin: 15px auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        font-family: Arial, sans-serif;
        display: grid;
        grid-template-columns: 1fr 1fr;
        width: 100%;
        max-width: 400px;
    }
    .card-items {
        display: contents;
    }
    #designateur{
        font-size: 1.1rem;
        color: red;
        margin-bottom: 8px;
        margin-top: 15px;
        font-weight: bold;
    }

    .card label.form-label {
        font-weight: bold;
        color: #555;
    }
</style>


<div class="example-wrapper">
    {% for con in contacts %}
    <div class="cards-container">
        <div class="card">
            <div class="card-items">
            <label id="designateur" class="form-label mt-4" for="readOnlyInput">ID: </label> 
            <label class="form-label mt-4" for="readOnlyInput">{{con.id}}</label>
            <label id="designateur" class="form-label mt-4" for="readOnlyInput">Nom: </label>  
            <label class="form-label mt-4" for="readOnlyInput">{{con.nomContact}} </label>
            <label id="designateur" class="form-label mt-4" for="readOnlyInput">Prenom: </label>
            <label class="form-label mt-4" for="readOnlyInput">{{con.prenomContact}} </label>
            <label id="designateur" class="form-label mt-4" for="readOnlyInput">Adresse: </label>
            <label class="form-label mt-4" for="readOnlyInput">{{con.adresseContact}} </label>  
            <label id="designateur" class="form-label mt-4" for="readOnlyInput">Code Postal: </label>
            <label class="form-label mt-4" for="readOnlyInput">{{con.cpContact}} </label>
            <label id="designateur" class="form-label mt-4" for="readOnlyInput">Ville: </label> 
            <label class="form-label mt-4" for="readOnlyInput">{{con.villeContact}} </label>
            <label id="designateur" class="form-label mt-4" for="readOnlyInput">Email: </label> 
            <label class="form-label mt-4" for="readOnlyInput">{{con.mailContact}} </label>
            <label id="designateur" class="form-label mt-4" for="readOnlyInput">Num√©ro: </label>
            <label class="form-label mt-4" for="readOnlyInput">{{con.numTelContact}} </label>  
            <label id="designateur" class="form-label mt-4" for="readOnlyInput">Message: </label>
            <label class="form-label mt-4" for="readOnlyInput">{{con.messageContact}} </label>

            </div>
        </div>
    </div>
    {% endfor %}

</div>
{% endblock %}
