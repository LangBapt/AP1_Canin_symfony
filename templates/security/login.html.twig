{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<link rel="stylesheet" href="{{ asset('css/styles.css') }}">
<div class="container-login">
    <div class="login-box">
        <form method="post">
            <h2 class="text-center">Connexion</h2>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-check">
                <input type="checkbox" name="_remember_me" class="form-check-input">
                <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
            </div>

            <button class="btn btn-primary btn-block mt-3" type="submit">Se connecter</button>
        </form>

        <div class="text-center mt-3">
            <p>Pas encore inscrit ? <a href="{{ path('app_register') }}">Créer un compte</a></p>
        </div>
    </div>
</div>
{% endblock %}